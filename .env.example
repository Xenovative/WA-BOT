# WhatsApp Web Configuration
# Set to true if you want to auto-restart on error
WA_RESTART_ON_AUTH_FAILURE=true

# Bot Admin Authentication
# Comma-separated list of phone numbers with country code that can access admin commands
# Format: 12345678901,23456789012 (no spaces, no +)
ADMIN_PHONE_NUMBERS=
# Set to false to allow all users to use commands
COMMAND_AUTH_REQUIRED=true

# UI Settings
# Set to false to hide WhatsXENO branding (logo, favicon, etc.)
SHOW_BRANDING=true

# LLM Provider Selection
# Options: 'openai', 'openrouter', 'ollama', 'mcp'
LLM_PROVIDER=ollama

# Default System Prompt
DEFAULT_SYSTEM_PROMPT=You are a helpful WhatsApp assistant. Be concise in your responses.

# Default LLM Parameters
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=500
DEFAULT_TOP_P=1.0
DEFAULT_FREQUENCY_PENALTY=0.0
DEFAULT_PRESENCE_PENALTY=0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mannix/llama3.1-8b-abliterated:latest

# MCP Configuration
MCP_SERVER_NAME=localhost:8080

# Knowledge Base Configuration
KB_ENABLED=true
KB_STORAGE_PATH=./kb_data

# Embedding Model Configuration
# If OPENAI_API_KEY is set, OpenAI embeddings will be used automatically
# Otherwise, falls back to local HuggingFace model (no API key required)
KB_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2  # Used when OpenAI key not available
KB_OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # Used when OpenAI key is available

# Document Processing
KB_CHUNK_SIZE=1000
KB_CHUNK_OVERLAP=200
KB_TOP_K=5
KB_SHOW_CITATIONS=false

# Alerting configuration
ALERT_SMS_PROVIDER=twilio
ALERT_PHONE_NUMBER=+1234567890
# Optional: comma separated list
# ALERT_PHONE_NUMBERS="+1234567890,+1987654321"
ALERT_SMS_COOLDOWN_MS=300000
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Rate Limiting Configuration
ENABLE_RATE_LIMIT=false
RATE_LIMIT_COUNT=20
RATE_LIMIT_WINDOW=86400000  # 24 hours in milliseconds

# Voice Message Configuration
ENABLE_VOICE_MESSAGES=true
WHISPER_MODEL=whisper-1  # or 'large-v2' for local Whisper
MAX_VOICE_DURATION=120  # seconds

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Facebook Messenger Configuration (Official API)
# Get these from Facebook Developer Console
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=your_custom_verify_token
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Facebook Messenger Configuration (Easy Setup - Unofficial)
# Option 1: Use App State (Recommended - more reliable)
# Extract app state using utils/facebook-session-extractor.html
FACEBOOK_APP_STATE=your_facebook_app_state_json

# Option 2: Use login credentials (less reliable)
# IMPORTANT: Disable 2FA on the Facebook account used for bot
# Or use an app-specific password if available
FACEBOOK_EMAIL=your_facebook_email
FACEBOOK_PASSWORD=your_facebook_password

# Instagram Configuration (Official API)
# Get these from Facebook Developer Console
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_VERIFY_TOKEN=your_custom_verify_token
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Instagram Configuration (Easy Setup - Unofficial)
# Option 1: Use session ID (Recommended - more stable)
INSTAGRAM_SESSION_ID=sessionid=12345678%3A...

# Option 2: Use login credentials
# Just use your Instagram login credentials
# The system will try Private API first, then Web automation
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
IG_PROXY=  # Optional proxy URL

# Voice Message Configuration
# Enable voice message transcription (requires OpenAI API key or Ollama)
ENABLE_VOICE_MESSAGES=true

# Voice transcription settings
MAX_VOICE_DURATION=120  # Maximum voice message duration in seconds
WHISPER_MODEL=whisper-1  # OpenAI Whisper model (whisper-1 recommended)

# Voice transcription will use your existing LLM provider:
# - If LLM_PROVIDER=openai: Uses OpenAI Whisper (requires OPENAI_API_KEY)
# - If LLM_PROVIDER=ollama: Uses Ollama Whisper (requires Ollama setup)

# Vision/Image Analysis Configuration
# Enable image analysis for photos sent to the bot
ENABLE_VISION=true

# Maximum image size in MB
MAX_IMAGE_SIZE_MB=10

# Default prompt for image analysis (can be overridden by user captions)
# The default prompt requests detailed analysis including people, objects, text, and context
VISION_PROMPT=Analyze this image in detail. Describe what you see including: people (who they are, their appearance, expressions, actions), objects, text, setting, context, and any notable details. Be specific and thorough.

# OpenAI Vision Configuration (for GPT-4 Vision)
# Model to use for vision analysis
OPENAI_VISION_MODEL=gpt-4-vision-preview
# Detail level: 'low', 'high', or 'auto'
OPENAI_VISION_DETAIL=auto
# Maximum tokens for vision response
OPENAI_VISION_MAX_TOKENS=300

# Ollama Vision Configuration (for llava, bakllava, etc.)
# Vision model to use with Ollama
OLLAMA_VISION_MODEL=llava

# Vision will use your existing LLM provider:
# - If LLM_PROVIDER=openai: Uses GPT-4 Vision (requires OPENAI_API_KEY)
# - If LLM_PROVIDER=ollama: Uses Ollama vision models like llava (requires Ollama setup with vision model)
